{
  "name": "Kiseru",
  "description": "A keyboard-first web navigation Chrome extension.",
  "homepage_url": "https://github.com/mrouhi13/kiseru",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "sessions", "history"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "css": ["styles.css"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/jetbrainsmono.woff2"],
      "matches": ["<all_urls>"]
    }
  ]
}
