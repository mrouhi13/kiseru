{
  "name": "Kiseru",
  "description": "A keyboard-first web navigation Chrome extension.",
  "homepage_url": "https://github.com/mrouhi13/kiseru",
  "options_page": "",
  "options_ui": "",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "dist/content.js"
      ],
      "css": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
